{
  "name": "@my-workspace-name/auth-service",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "platform": "node",
          "outputPath": "apps/auth-service/dist",
          "format": [
            "cjs"
          ],
          "bundle": true,
          "main": "apps/auth-service/src/main.ts",
          "tsConfig": "apps/auth-service/tsconfig.app.json",
          "outputFileName": "main.js",
          "assets": [
            "apps/auth-service/src/assets"
          ],
          "external": ["@prisma/client", "@prisma/client/runtime*"],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            },
            "format": "cjs",
            "platform": "node",
            "target": "es2022"
          }
        },
        "configurations": {
          "development": {
            "watch": true,
            "format": ["cjs"]
          },
          "production": {
            "generateLockfile": true,
            "format": ["cjs"],
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".js"
              },
              "format": "cjs",
              "platform": "node",
              "target": "es2022"
            }
          }
        }
      },
      "prune-lockfile": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/apps/auth-service/dist/package.json",
          "{workspaceRoot}/apps/auth-service/dist/package-lock.json"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{workspaceRoot}/apps/auth-service/dist/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@my-workspace-name/auth-service:build",
          "runBuildTargetDependencies": false,
          "waitUntilTargets": [],
          "host": "localhost",
          "port": 6001
        },
        "configurations": {
          "development": {
            "buildTarget": "@my-workspace-name/auth-service:build:development"
          },
          "production": {
            "buildTarget": "@my-workspace-name/auth-service:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      },
      "docker:build": {
        "dependsOn": [
          "build",
          "prune"
        ]
      }
    }
  },
  "dependencies": {
    "express": "^4.21.2"
  }
}
